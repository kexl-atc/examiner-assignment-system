{
  "name": "examiner-assignment-system",
  "version": "8.0.15",
  "description": "智能考官排班系统 - 排班结果显示优化 + 拖拽排班功能设计",
  "main": "electron/main.js",
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --config vite.config.production.mjs",
    "build:check": "vue-tsc && vite build",
    "preview": "vite preview",
    "server": "node server.cjs",
    "server:dev": "node server.cjs",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "electron-builder build --win --x64",
    "electron:build:prod": "electron-builder build --config electron-builder.production.json --win --x64",
    "electron:pack": "npm run build:prod && npm run electron:build",
    "pack:full": "npm run clean && npm run backend:build && npm run build:prod && npm run electron:build:prod",
    "backend:build": "cd optaplanner-service && mvn clean package -Pproduction -DskipTests",
    "clean": "rimraf dist dist-electron build-electron-output*",
    "clean:all": "rimraf dist dist-electron build-electron-output* optaplanner-service/target node_modules/.vite",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@rollup/rollup-win32-x64-msvc": "^4.52.0",
    "@tailwindcss/typography": "^0.5.18",
    "@types/jszip": "^3.4.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "echarts": "^5.6.0",
    "element-plus": "^2.11.2",
    "exceljs": "^4.4.0",
    "express": "^4.18.0",
    "http-proxy-middleware": "^3.0.5",
    "jszip": "^3.10.1",
    "lucide-vue-next": "^0.400.0",
    "pinia": "^2.1.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "vue": "^3.4.0",
    "vue-echarts": "^6.6.0",
    "vue-router": "^4.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vue-tsc": "^2.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.examiner.assignment-system",
    "productName": "考试自动排班助手",
    "asar": false,
    "compression": "normal",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "java-runtime",
        "to": "java-runtime",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "optaplanner-service/target/quarkus-app",
        "to": "optaplanner-service/target/quarkus-app",
        "filter": [
          "**/*",
          "!**/*.log",
          "!**/tmp/**",
          "!**/heap-dump.hprof"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "考试自动排班助手",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "language": "2052",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "displayLanguageSelector": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    }
  }
}
